@model IEnumerable<NeverGoodEnough.Models.ViewModels.AllEngineerVm>

@{
    ViewBag.Title = "All Engineers";
}

<h2>All Engineers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameMechanics)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameVictoryConditions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Games)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameMechanics)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameVictoryConditions)
            </td>
        </tr>
    }

</table>
