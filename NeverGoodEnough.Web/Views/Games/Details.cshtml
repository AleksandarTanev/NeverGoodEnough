@model NeverGoodEnough.Models.ViewModels.Games.DetailsGameVm

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Game</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

    </dl>
</div>
<hr />

<h4>GameMechanics</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.GameMechanics)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @using (@Html.BeginForm("RemoveMechanic", "Games"))
                {
                    @Html.Hidden("gameId", @Model.Id)
                    @Html.Hidden("mechanicId", item.Id)
                    <input type="submit" value="Remove" class="link" />
                }
            </td>
        </tr>
    }

</table>

@using (Html.BeginForm("AddMechanic", "Games"))
{
    <div class="form-group">
        @Html.Hidden("gameId", @Model.Id)
        @Html.Action("AvailableMechanics")
    </div>

    <input type="submit" value="Add" class="btn btn-default" />
}


<hr/>

<h4>GameVictoryConditions</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.GameVictoryConditions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @using (@Html.BeginForm("RemoveVictoryCondition", "Games"))
                {
                    @Html.Hidden("gameId", @Model.Id)
                    @Html.Hidden("victoryConditionId", item.Id)
                    <input type="submit" value="Remove" class="link" />
                }
            </td>
        </tr>
    }

</table>

@using (Html.BeginForm("AddVictoryCondition", "Games"))
{
    <div class="form-group">
        @Html.Hidden("gameId", @Model.Id)
        @Html.Action("AvailableVictoryConditions")
    </div>

    <input type="submit" value="Add" class="btn btn-default" />
}
<hr />


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
